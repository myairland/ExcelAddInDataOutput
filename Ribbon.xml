<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
    <ribbon>
        <tabs>
            <tab idMso="TabAddIns">
                <group id="groupData" label="データ抽出">
                    <button id="btnConfigure" onAction="btnConfigure_Click" label="基本設定" showImage="false" />
                  <button id="btnTableConfigure" onAction="btnTableConfigure_Click"  label="抽出テーブル設定" showImage="false" />
                  <gallery id="galleryData" 
                           showImage="false" columns="1"
                           getLabel="galleryData_getLabel"
                           getItemCount="galleryData_getItemCount"
                           getItemLabel ="galleryData_getItemLabel"
                           onAction="galleryData_Change"
                           
                           />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>